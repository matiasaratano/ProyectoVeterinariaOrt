@model List<Turnos>;
@{
    ViewData["Title"] = "Reservas";
    //List<string> strings = HttpContext.Session.GetString("SDNI"); 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2 style="text-align: center; margin: 40px 0px;">Turnos Reservados</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>DIA</th>
                <th>HORA</th>
                <th>NOMBRE</th>
                <th>TIPO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Turnos t in Model)
            {
                <tr>
                    <td>@t.Dia</td>
                    <td>@t.Hora</td>
                     <td>@t.Nombre</td>
                    <td>@t.Tipo</td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>


<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
            padding: 10px;
            text-align: left;
        }

        .table tbody td {
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e6e6e6;
        }
</style>